# Staging Environment
ENV=staging
FLASK_ENV=staging
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/microloans
PORT=8000
LOG_LEVEL=INFO

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=microloans
DB_PORT=5433

# Resource limits
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=512M
DB_CPU_RESERVATION=0.5
DB_MEMORY_RESERVATION=256M
API_CPU_LIMIT=1.0
API_MEMORY_LIMIT=512M
API_CPU_RESERVATION=0.5
API_MEMORY_RESERVATION=256M

# Gunicorn workers
GUNICORN_WORKERS=3
GUNICORN_RELOAD=
