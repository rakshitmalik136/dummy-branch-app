# Development Environment
ENV=dev
FLASK_ENV=development
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/microloans
PORT=8000
LOG_LEVEL=DEBUG

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=microloans
DB_PORT=5432

# Resource limits
DB_CPU_LIMIT=0.5
DB_MEMORY_LIMIT=256M
DB_CPU_RESERVATION=0.25
DB_MEMORY_RESERVATION=128M
API_CPU_LIMIT=0.5
API_MEMORY_LIMIT=256M
API_CPU_RESERVATION=0.25
API_MEMORY_RESERVATION=128M

# Gunicorn workers
GUNICORN_WORKERS=2
GUNICORN_RELOAD=--reload
