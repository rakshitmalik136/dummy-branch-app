# Production Environment
ENV=prod
FLASK_ENV=production
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/microloans
PORT=8000
LOG_LEVEL=WARNING

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=microloans
DB_PORT=5434

# Resource limits
DB_CPU_LIMIT=2.0
DB_MEMORY_LIMIT=1G
DB_CPU_RESERVATION=1.0
DB_MEMORY_RESERVATION=512M
API_CPU_LIMIT=2.0
API_MEMORY_LIMIT=1G
API_CPU_RESERVATION=1.0
API_MEMORY_RESERVATION=512M

# Gunicorn workers
GUNICORN_WORKERS=4
GUNICORN_RELOAD=
